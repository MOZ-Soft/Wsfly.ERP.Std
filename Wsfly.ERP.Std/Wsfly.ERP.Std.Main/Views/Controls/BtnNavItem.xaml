<UserControl x:Class="Wsfly.ERP.Std.Views.Controls.BtnNavItem" x:Name="btnNavItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wsfly.ERP.Std.Views.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="80">
    <Grid>
        <Border Height="100" MinWidth="80">
            <StackPanel>
                <Button x:Name="btnTag" Style="{DynamicResource btnNav}">
                    <Image x:Name="imgTag" Source="{Binding Path=Icon, ElementName=btnNavItem}" Width="40" Height="40" Opacity="0.8"></Image>
                </Button>
                <TextBlock x:Name="lblName" Margin="3 3 3 0" TextWrapping="Wrap" TextAlignment="Center" Text="{Binding Path=Text, ElementName=btnNavItem}"></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
