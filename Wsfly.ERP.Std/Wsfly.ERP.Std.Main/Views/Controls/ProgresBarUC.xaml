<mz:BaseUserControl x:Class="Wsfly.ERP.Std.Views.Controls.ProgresBarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wsfly.ERP.Std.Views.Controls"
             xmlns:mz="clr-namespace:Wsfly.ERP.Std.AppCode.Base"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="520">
    <Grid>
        <StackPanel Margin="0 0 0 0">
            <DockPanel Margin="0 0 0 5">
                <TextBlock x:Name="lblTitle" FontWeight="Bold">标题</TextBlock>
                <TextBlock x:Name="lblProgres" FontWeight="Normal" Foreground="Gray" HorizontalAlignment="Right">0%</TextBlock>
            </DockPanel>
            <Border x:Name="borderOuter" CornerRadius="5" Height="12" Background="#AAFFFFFF" BorderThickness="1" BorderBrush="#88FFFFFF">
                <Border x:Name="borderInner" Width="100" Height="10" CornerRadius="5" Background="#0090ff" HorizontalAlignment="Left"></Border>
            </Border>
        </StackPanel>
    </Grid>
</mz:BaseUserControl>
