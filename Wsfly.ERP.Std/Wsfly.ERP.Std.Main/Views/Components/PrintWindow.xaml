<mz:BaseWindow x:Class="Wsfly.ERP.Std.Views.Components.PrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mz="clr-namespace:Wsfly.ERP.Std.AppCode.Base"
        Title="打印预览" Height="600" Width="1000" Background="#ccc">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40px" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--工具栏-->
        <StackPanel Background="White">
            <WrapPanel Orientation="Horizontal" Margin="8"  HorizontalAlignment="Right">
                <Button x:Name="btnPrint" Width="60" Cursor="Hand">打印</Button>
                <Button x:Name="btnClose" Width="60" Cursor="Hand" Margin="5,0,0,0">关闭</Button>
            </WrapPanel>
        </StackPanel>

        <!--=存放打印工作区=-->
        <StackPanel Grid.Row="1" x:Name="panelPrinter" Margin="50"></StackPanel>
    </Grid>
</mz:BaseWindow>
