<mz:BaseUserControl x:Class="Wsfly.ERP.Std.Views.Parts.ShowPopTextUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wsfly.ERP.Std.Views.Parts"
             xmlns:mz="clr-namespace:Wsfly.ERP.Std.AppCode.Base"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!--<TextBlock x:Name="lblContent" FontSize="14" MaxWidth="500" TextWrapping="Wrap"></TextBlock>-->
        <TextBox x:Name="lblContent" AcceptsReturn="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Top" IsReadOnly="True" Background="White" BorderThickness="0"></TextBox>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0 1 0 0">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnClose" Style="{DynamicResource btnOk}">关闭</Button>
            </WrapPanel>
        </Border>
    </Grid>
</mz:BaseUserControl>
