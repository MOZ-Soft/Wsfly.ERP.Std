<mz:BaseUserControl x:Class="Wsfly.ERP.Std.Views.Parts.HTMLPrintUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wsfly.ERP.Std.Views.Parts"
             xmlns:mz="clr-namespace:Wsfly.ERP.Std.AppCode.Base"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <WebBrowser x:Name="browser"></WebBrowser>
        <WrapPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnPrint" Style="{DynamicResource btnOk}">打印</Button>
            <Button x:Name="btnPreview" Style="{DynamicResource btnAction}">预览</Button>
            <Button x:Name="btnSetting" Style="{DynamicResource btnAction}">设置</Button>
            <Button x:Name="btnCancel" Style="{DynamicResource btnAction}">取消</Button>
        </WrapPanel>
    </Grid>
</mz:BaseUserControl>
