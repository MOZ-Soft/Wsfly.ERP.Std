<UserControl x:Class="Wsfly.ERP.Std.Views.Parts.SubNavItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wsfly.ERP.Std.Views.Parts"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="80">
    <Grid>
        <Border x:Name="borderMenu" BorderBrush="Transparent" BorderThickness="1" CornerRadius="5" Background="#00ffffff">
            <StackPanel Margin="5">
                <StackPanel x:Name="panelIcon" Height="56">
                </StackPanel>
                <StackPanel>
                    <TextBlock x:Name="lblName" Height="34" TextAlignment="Center" TextWrapping="Wrap"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
